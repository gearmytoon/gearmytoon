<div class="column grid_5">
  <h2>Login or signup</h2>
  <div id="rpx_now_widget">
    <%= RPXNow.embed_code('gearmytoon',rpx_token_sessions_url) %>
  </div>
</div>
<div id="or" class="column grid_2">
  <p>&mdash;or&mdash;</p>
</div>
<div class="column grid_5">
  <h2>Login using a GearMyToon account</h2>
  <% form_for @user_session, :url => user_session_path do |f| %>
    <%= f.error_messages :header_message => nil %>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email, :class => 'text' %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password, :class => 'password' %>
    </p>
    <p>
      <%= f.check_box :remember_me, :class => 'checkbox' %><%= f.label :remember_me %>
    </p>
    <p>
      <%= f.submit "Login", :class => 'button' %>
    </p>
  <% end %>
  <p>
    Want a GearMyToon Account? <%= link_to "Signup", signup_path %>
  </p>
</div>
