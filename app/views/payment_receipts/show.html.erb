<table id="payment_history">
  <tr>
    <th>Plan</th>
    <th>Amount Paid</th>
    <th>Paid On</th>
  </tr>
  <% @payments.each do |payment| %>
    <tr class="payment_receipt">
      <td class="plan">Personal</td>
      <td class="amount">$3</td>
      <td class="paid_at"><%= payment.updated_at.to_date.to_s(:long) %></td>
    </tr>
  <% end %>
</table>